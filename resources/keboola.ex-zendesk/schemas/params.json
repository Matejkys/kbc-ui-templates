{
  "definitions": {
    "job": {
      "type": "object",
      "title": "Job",
      "headerTemplate": "{{ i1 }}: {{self.endpoint}}",
      "required": [
        "endpoint"
      ],
      "properties": {
        "endpoint": {
          "type": "string",
          "minLength": 1
        },
        "dataType": {
          "type": "string",
          "description": "Name the destination table and data type of results",
          "title": "Data type"
        },
        "params": {
          "type": "object",
          "format": "table",
          "title": "Query parameters",
          "additionalProperties": {
            "$ref": "#/definitions/param"
          }
        },
        "children": {
          "type": "array",
          "title": "Child Jobs",
          "uniqueItems": true,
          "items": {
            "$ref": "#/definitions/job"
          }
        }
      },
      "defaultProperties": ["endpoint", "dataType", "params"]
    },
    "childJob": {
      "allOf": [
        {
          "$ref": "#/definitions/job"
        },
        {
          "properties": {
            "placeholders": {
              "type": "object",
              "format": "grid",
              "title": "Placeholders",
              "additionalProperties": {"type": "string"}
            },
            "recursionFilter": {
              "type": "string",
              "title": "Recursion Filter",
              "description": "Can contain a value consisting of a name of a field from the parent's response, logical operator and a value to compare against. Supported operators are \"==\", \"<\", \">\", \"<=\", \">=\", \"!=\""
            }
          }
        }
      ]
    },
    "attr": {
      "type": "object",
      "title": "Attribute",
      "properties": {
        "attr": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "time": {
      "type": "object",
      "title": "Time value",
      "properties": {
        "time": {
          "type": "string",
          "enum": [
            "previousStart",
            "currentStart"
          ],
          "required": true
        }
      },
      "additionalProperties": false
    },
    "param": {
      "oneOf": [
        {
          "type": "string",
          "title": "String"
        },
        {
          "$ref": "https://raw.githubusercontent.com/keboola/kbc-ui-templates/master/resources/default/shared/function.json",
          "title": "Function"
        },
        {
          "$ref": "#/definitions/attr",
          "title": "Config attribute"
        },
        {
          "$ref": "#/definitions/time",
          "title": "Time value"
        }
      ]
    },
    "zendeskJob": {
      "options": {
        "keep_oneof_values": false
      },
      "oneOf": [
        {
          "$ref": "#/definitions/zendeskTicketsJob",
          "title": "Tickets export"
        },
        {
          "$ref": "#/definitions/zendeskUsersJob",
          "title": "Users"
        },
        {
          "$ref": "#/definitions/job"
        }
      ],
      "headerTemplate": "{{ i1 }}: {{self.endpoint}}",
      "title": "Job"
    },
    "zendeskTicketsJob": {
      "allOf": [
        {
          "$ref": "#/definitions/job"
        },
        {
          "title": "Tickets export",
          "properties": {
            "endpoint": {
              "template": "exports/tickets.json"
            },
            "dataType": {
              "template": "tickets_export"
            },
            "params": {
              "required": [
                "start_time"
              ],
              "properties": {
                "start_time": {
                  "title": "Start time",
                  "$ref": "#/definitions/param"
                },
                "end_time": {
                  "title": "End time",
                  "$ref": "#/definitions/param"
                }
              }
            },
            "children": {
              "type": "array",
              "title": "Child Jobs",
              "uniqueItems": true,
              "items": {
                "oneOf": [
                  {
                    "allOf": [
                      {"$ref": "#/definitions/childJob"},
                      {
                        "title": "Ticket comments",
                        "properties": {
                          "endpoint": {
                            "template": "tickets/{id}/comments.json"
                          },
                          "recursionFilter": {
                            "template": "status!=Deleted",
                            "type": "string"
                          },
                          "dataType": {
                            "template": "tickets_comments"
                          },
                          "placeholders": {
                            "properties": {
                              "id": {
                                "template": "id",
                                "type": "string"
                              }
                            },
                            "additionalProperties": {"type": "string"}
                          }
                        }
                      }
                    ]
                  },
                  {
                    "allOf": [
                      {"$ref": "#/definitions/childJob"},
                      {
                        "title": "Ticket audits",
                        "properties": {
                          "endpoint": {
                            "template": "tickets/{id}/audits.json"
                          },
                          "recursionFilter": {
                            "template": "status!=Deleted",
                            "type": "string"
                          },
                          "dataType": {
                            "template": "tickets_audits"
                          },
                          "placeholders": {
                            "properties": {
                              "id": {
                                "template": "id",
                                "type": "string"
                              }
                            },
                            "additionalProperties": {"type": "string"}
                          }
                        }
                      }
                    ]
                  },
                  {"$ref": "#/definitions/childJob"}
                ]
              }
            }
          }
        }
      ]
    },
    "zendeskUsersJob": {
      "allOf": [
        {
          "$ref": "#/definitions/job"
        },
        {
          "title": "Users",
          "properties": {
            "endpoint": {
              "template": "users.json"
            },
            "dataType": {
              "template": "users"
            }
          }
        }
      ]
    }
  },
  "title": "Config",
  "type": "object",
  "properties": {
    "outputBucket": {
      "type": "string",
      "description": "Storage bucket for storing results, prefix in.c- added automatically.",
      "minLength": 4,
      "default": "zendesk",
      "title": "Output bucket",
      "required": true
    },
    "domain": {
      "type": "string",
      "title": "Your Zendesk domain",
      "description": "e.g.: \"keboola\"",
      "minLength": 1,
      "required": true
    },
    "username": {
      "type": "string",
      "title": "Username",
      "description": "Your Zendesk e-mail appended by \"/token\"",
      "minLength": 11,
      "required": true
    },
    "#password": {
      "type": "string",
      "title": "Password",
      "format": "password",
      "description": "Your Zendesk token",
      "minLength": 40,
      "required": true
    },
    "jobs": {
      "type": "array",
      "title": "Jobs",
      "format": "tabs",
      "uniqueItems": true,
      "items": {
        "$ref": "#/definitions/zendeskJob",
        "headerTemplate": "{{ i1 }}: {{self.endpoint}}"
      }
    }
  }
}
