{
  "definitions": {
    "job": {
      "type": "object",
      "title": "Job",
      "headerTemplate": "{{ i1 }}: {{self.endpoint}}",
      "properties": {
        "endpoint": {
          "type": "string",
          "minLength": 1
        },
        "dataType": {
          "type": "string",
          "description": "Name the destination table and data type of results",
          "title": "Data type"
        },
        "params": {
          "type": "object",
          "format": "table",
          "title": "Query parameters",
          "additionalProperties": {
            "$ref": "#/definitions/param"
          }
        },
        "children": {
          "type": "array",
          "title": "Child Jobs",
          "uniqueItems": true,
          "items": {
            "$ref": "#/definitions/job"
          }
        }
      }
    },
    "attr": {
      "type": "object",
      "title": "Attribute",
      "properties": {
        "attr": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "time": {
      "type": "object",
      "title": "Time value",
      "properties": {
        "time": {
          "type": "string",
          "enum": [
            "previousStart",
            "currentStart"
          ],
          "required": true
        }
      },
      "additionalProperties": false
    },
    "param": {
      "oneOf": [
        {
          "type": "string",
          "title": "String"
        },
        {
          "$ref": "https://raw.githubusercontent.com/keboola/kbc-ui-templates/master/resources/default/shared/function.json#/definitions/function",
          "title": "Function"
        },
        {
          "$ref": "#/definitions/attr",
          "title": "Config attribute"
        },
        {
          "$ref": "#/definitions/time",
          "title": "Time value"
        }
      ]
    },
    "zendeskJob": {
      "options": {
        "keep_oneof_values": false
      },
      "oneOf": [
        {
          "$ref": "#/definitions/zendeskTicketsJob",
          "title": "Tickets export"
        },
        {
          "$ref": "#/definitions/zendeskUsersJob",
          "title": "Users"
        },
        {
          "$ref": "#/definitions/job"
        }
      ]
    },
    "zendeskTicketsJob": {
      "allOf": [
        {
          "$ref": "#/definitions/job"
        },
        {
          "title": "Tickets export",
          "properties": {
            "endpoint": {
              "template": "exports/tickets.json"
            },
            "dataType": {
              "template": "tickets_export"
            },
            "params": {
              "properties": {
                "start_time": {
                  "title": "Start time",
                  "$ref": "#/definitions/param"
                },
                "end_time": {
                  "title": "End time",
                  "$ref": "#/definitions/param"
                }
              }
            }
          }
        }
      ]
    },
    "zendeskUsersJob": {
      "allOf": [
        {
          "$ref": "#/definitions/job"
        },
        {
          "title": "Users",
          "properties": {
            "endpoint": {
              "template": "users.json"
            },
            "dataType": {
              "template": "users"
            }
          }
        }
      ]
    }
  },
  "title": "Config",
  "type": "object",
  "properties": {
    "outputBucket": {
      "type": "string",
      "description": "Output bucket for results",
      "minLength": 4,
      "default": "zendesk",
      "title": "Output SAPI bucket"
    },
    "domain": {
      "type": "string",
      "title": "Your Zendesk domain",
      "description": "e.g.: \"keboola\"",
      "minLength": 1,
      "required": true
    },
    "username": {
      "type": "string",
      "description": "Your zendesk e-mail appended by \"/token\"",
      "minLength": 11,
      "required": true
    },
    "password": {
      "type": "string",
      "description": "Your zendesk token",
      "minLength": 40,
      "required": true
    },
    "jobs": {
      "type": "array",
      "title": "Jobs",
      "uniqueItems": true,
      "items": {
        "$ref": "#/definitions/zendeskJob"
      }
    }
  }
}
