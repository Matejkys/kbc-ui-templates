{
  "$schema": "http://json-schema.org/draft-04/schema",
  "id": "http://localhost/json-editor/schemas/api",
  "definitions": {
    "paginationMethod": {
      "type": "object",
      "properties": {
        "method": {
          "type": "string"
        },
        "nextPageFlag": {
          "type": "object",
          "title": "Next page flag in response",
          "properties": {
            "field": {
              "type": "string",
              "title": "Name of the boolean field within response",
              "minLength": 1
            },
            "stopOn": {
              "type": "boolean",
              "title": "Whether to stop scrolling on true or false"
            },
            "ifNotSet": {
              "type": "boolean",
              "title": "If the value is not contained in reponse, what to assume?"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "title": "API",
  "type": "object",
  "additionalProperties": false,
  "defaultProperties": [
    "baseUrl",
    "http"
  ],
  "properties": {
    "baseUrl": {
      "title": "Base URL",
      "oneOf": [
        {
          "type": "string",
          "title": "Plain URL"
        },
        {
          "$ref": "https://raw.githubusercontent.com/keboola/kbc-ui-templates/master/resources/default/shared/function.json"
        }
      ]
    },
    "http": {
      "type": "object",
      "title": "HTTP Headers",
      "properties": {
        "headers": {
          "type": "object",
          "title": "Default headers",
          "options": {
            "collapsed": true
          },
          "defaultProperties": [

          ],
          "properties": {
            "Accept-Encoding": {
              "type": "string"
            },
            "Accept": {
              "type": "string"
            }
          },
          "additionalProperties": {
            "type": "string"
          }
        },
        "requiredHeaders": {
          "type": "array",
          "title": "Required headers",
          "description": "Add headers that must be set in config.http.headers",
          "options": {
            "collapsed": true
          },
          "format": "table",
          "items": {
            "type": "string",
            "headerTemplate": "{{self}}",
            "title": "Header"
          }
        }
      }
    },
    "authentication": {
      "title": "Authentication",
      "oneOf": [
        {
          "type": "object",
          "title": "Basic",
          "properties": {
            "type": {
              "type": "string",
              "template": "basic"
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "title": "Query",
          "description": "Add query parameters to each request",
          "properties": {
            "type": {
              "type": "string",
              "template": "url.query"
            }
          },
          "additionalProperties": {
            "oneOf": [
              {
                "type": "string"
              },
              {
                "$ref": "https://raw.githubusercontent.com/keboola/kbc-ui-templates/master/resources/default/shared/function.json#/definitions/function"
              }
            ]
          }
        },
        {
          "type": "object",
          "title": "Login",
          "properties": {
            "type": {
              "type": "string",
              "template": "login"
            },
            "loginRequest": {
              "type": "object",
              "properties": {
                "endpoint": {
                  "type": "string",
                  "minLength": 1,
                  "description": "The API 'login' URL"
                },
                "params": {
                  "type": "object",
                  "additionalProperties": {
                    "oneOf": [
                      {
                        "type": "string"
                      },
                      {
                        "$ref": "https://raw.githubusercontent.com/keboola/kbc-ui-templates/master/resources/default/shared/function.json#/definitions/function"
                      }
                    ]
                  }
                },
                "headers": {
                  "type": "object",
                  "additionalProperties": {
                    "oneOf": [
                      {
                        "type": "string"
                      },
                      {
                        "$ref": "https://raw.githubusercontent.com/keboola/kbc-ui-templates/master/resources/default/shared/function.json#/definitions/function"
                      }
                    ]
                  }
                },
                "method": {
                  "type": "string",
                  "enum": [
                    "GET",
                    "POST",
                    "FORM"
                  ]
                }
              }
            },
            "apiRequest": {
              "type": "object",
              "properties": {
                "query": {
                  "type": "object",
                  "additionalProperties": {
                    "type": "string"
                  },
                  "description": "Name of the query parameter with the value being a path within the response from login API (eg. 'token')"
                },
                "headers": {
                  "type": "object",
                  "additionalProperties": {
                    "type": "string"
                  },
                  "description": "Name of the header with the value being a path within the response from login API (eg. 'X-Api-Key')"
                }
              }
            },
            "expires": {
              "oneOf": [
                {
                  "type": "integer",
                  "title": "Number of seconds"
                },
                {
                  "title": "Value in login response",
                  "type": "object",
                  "properties": {
                    "response": {
                      "minLength": 1,
                      "type": "string",
                      "description": "Path within the response containing the expiry time value."
                    },
                    "relative": {
                      "type": "boolean",
                      "default": false
                    }
                  }
                }
              ]
            }
          }
        }
      ]
    },
    "pagination": {
      "title": "Pagination",
      "options": {
        "keep_oneof_values": false
      },
      "oneOf": [
        {
          "allOf": [
            {
              "$ref": "#/definitions/paginationMethod"
            },
            {
              "title": "Offset",
              "defaultProperties": [
                "method",
                "limit"
              ],
              "description": "Scroll using limit and offset parameters",
              "properties": {
                "method": {
                  "type": "string",
                  "template": "offset"
                },
                "limit": {
                  "type": "integer",
                  "minimum": 1
                },
                "limitParam": {
                  "type": "string",
                  "title": "Limit parameter",
                  "default": "limit"
                },
                "offsetParam": {
                  "type": "string",
                  "title": "Offset parameter",
                  "default": "offset"
                },
                "firstPageParams": {
                  "type": "boolean",
                  "title": "Include parameters in first page request",
                  "default": true
                }
              }
            }
          ]
        },
        {
          "allOf": [
            {
              "$ref": "#/definitions/paginationMethod"
            },
            {
              "title": "Response parameter",
              "defaultProperties": [
                "method",
                "responseParam",
                "queryParam"
              ],
              "properties": {
                "method": {
                  "template": "response.param"
                },
                "responseParam": {
                  "type": "string",
                  "minLength": 1,
                  "title": "Path in response",
                  "description": "Path within response that points to a value used for scrolling"
                },
                "queryParam": {
                  "type": "string",
                  "minLength": 1,
                  "title": "Query parameter"
                },
                "includeParams": {
                  "type": "boolean",
                  "title": "Whether params from job configuration are used in next page request",
                  "default": false
                },
                "scrollRequest": {
                  "type": "object",
                  "title": "Next page request",
                  "description": "Override next page request settings",
                  "properties": {
                    "endpoint": {
                      "type": "string",
                      "minLength": 1
                    },
                    "method": {
                      "type": "string",
                      "enum": [
                        "GET",
                        "POST",
                        "FORM"
                      ]
                    },
                    "params": {
                      "type": "object",
                      "format": "table",
                      "title": "Query parameters",
                      "additionalProperties": {
                        "$ref": "#/definitions/param"
                      }
                    }
                  }
                }
              }
            }
          ]
        },
        {
          "allOf": [
            {
              "$ref": "#/definitions/paginationMethod"
            },
            {
              "title": "Response URL",
              "defaultProperties": [
                "method",
                "urlKey"
              ],
              "properties": {
                "method": {
                  "template": "response.url"
                },
                "urlKey": {
                  "type": "string",
                  "default": "next_page",
                  "minLength": 1
                },
                "includeParams": {
                  "type": "boolean",
                  "title": "Include config parameters",
                  "description": "Whether params from job configuration are used in next page request",
                  "default": false
                }
              }
            }
          ]
        },
        {
          "allOf": [
            {
              "$ref": "#/definitions/paginationMethod"
            },
            {
              "title": "Page number",
              "defaultProperties": [
                "method",
                "pageParam"
              ],
              "properties": {
                "method": {
                  "template": "pagenum"
                },
                "pageParam": {
                  "type": "string",
                  "default": "page",
                  "title": "Page number parameter"
                },
                "limit": {
                  "type": "integer"
                },
                "limitParam": {
                  "type": "string",
                  "default": "limit",
                  "title": "Limit parameter"
                },
                "firstPage": {
                  "type": "integer",
                  "default": 1,
                  "title": "First page number"
                },
                "firstPageParams": {
                  "type": "boolean",
                  "title": "Include parameters in first page request",
                  "default": true
                }
              }
            }
          ]
        }
      ]
    }
  }
}
